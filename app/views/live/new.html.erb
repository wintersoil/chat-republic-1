<% if logged_in? %>
  <div class="cards-live">
    <% @users.each do |usr| %>
      <% if usr.id != current_user.id %>
        <div class="card-live">
            <% if usr.profile_picture.present? %>
              <div class="image-card-live">
                <%= image_tag(usr.profile_picture.to_s, width: '150', height:'150', class:"profile-rounded") %>
              </div>
            <% else %>
              <div class="image-card-live">
                <%= image_tag("https://aliphotoappimages.s3.ca-central-1.amazonaws.com/svg/avatar.png",width:'150',height:'150',class:"profile-rounded") %>
              </div>
            <% end %>
            <div class="name-card-live-outer">
              <div class="name-card-live">
                <%= usr.first_name %> <%= usr.last_name %>
                <%= link_to "Live", video_path(id: usr.id), method: :post %>
                <%= link_to private_chat_path(id: usr.id) do %>
                  <div class="">
                    <%= image_tag("private_messages_logo.svg", width:'150', height:'150') %>
                  </div>
                <% end %>
              </div>
            </div>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>
