<% if (msg.mp3.nil? && msg.mp4.nil?) %>
<div style="display: flex;margin-left: 20px;" class="private-message-all <% if msg.user.id != current_user.id %>private-message-others<% end %>" data-attr="<%= msg.user.id %>">
<% if msg.user.profile_picture.nil? == false %>
  <div class="private-message-image-box">
    <%= image_tag(msg.user.profile_picture.to_s, height:'90', width:'90', class:'profile-picture') %>
  </div>
<% end %>
  <div class="private-message-drop-shadow">
    <div class="private-message-outer">
      <div class="private-message-box">
        <span style="z-index:5;">
          <%= msg.user.first_name %> <%= msg.user.last_name %>: <%= msg.body %>
        </span>
        <div class="private-message-bubble">
        </div>
      </div>
      <div class="private-message-timing">
        <%= time_ago_in_words(msg.created_at) %> ago
      </div>
    </div>
  </div>
</div>
<% end %>
<% if msg.mp3.nil? == false %>
  <div>
    <div class="message-outer <% if defined?(nobroadcast).nil? == false && nobroadcast && msg.user.id != current_user.id %>messages-of-others<% end %>" data-attr="<%= msg.user.id %>">
      <div class="message-wrap">
        <% if msg.user.profile_picture.present? %>
          <%= image_tag(msg.user.profile_picture.to_s, height:'100', width:'100',class:'profile-picture') %>
        <% end %>
        <div class="message-boxing-audio">
          <%= image_tag("audio.svg",width:'80',height:'80') %>
            <div class="message-body">
              <div>
                <strong><%= msg.user.first_name %> <%= msg.user.last_name %> : </strong>
              </div>
              <div>
                <%= audio_tag(msg.mp3, autoplay:false, controls:true, type:"audio/mpeg") %>
              </div>
            </div>
            <div class="message-timing">
              <span><%= time_ago_in_words(msg.created_at) %> ago</span>
            </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
<% if msg.mp4.nil? == false %>
  <div>
    <div class="message-outer <% if defined?(nobroadcast).nil? == false && nobroadcast && msg.user.id != current_user.id %>messages-of-others<% end %>" data-attr="<%= msg.user.id %>">
      <div class="message-wrap">
        <% if msg.user.profile_picture.present? %>
          <%= image_tag(msg.user.profile_picture.to_s, height:'100', width:'100',class:'profile-picture') %>
        <% end %>
        <div class="message-boxing-video-outer">
          <div class="message-boxing-video">
            <%= image_tag("https://cdn2.iconfinder.com/data/icons/web-set-1/50/65-512.png",width:'80',height:'80') %>
              <div class="message-body">
                <div>
                  <strong><%= msg.user.first_name %> <%= msg.user.last_name %> : </strong>
                </div>
                <div>
                  <%= video_tag(msg.mp4, autoplay:false, controls:true, type:"video/mpeg", height:'180', width:'300') %>
                </div>
              </div>
              <div class="message-timing">
                <span><%= time_ago_in_words(msg.created_at) %> ago</span>
              </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
