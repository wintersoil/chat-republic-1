<div class="griddy">
  <div class="white-glassy">
    <div class="white-glassy-intro" id="intro">
      <%= image_tag("password.svg", height:'200', width:'200') %>
      <%= form_for @user, url: {action: "update"} do |f| %>
      <div class="form-contents">
         <div class="form-individual">
           <%= f.password_field :password, class:"big-inputting", placeholder:"Password", autocomplete: :off %>
         </div>
         <div class="form-individual">
           <%= f.password_field :confirm_password, class:"big-inputting", placeholder:"Confirm Password", autocomplete: :off %>
         </div>
         <div class="form-individual">
           <%= f.submit "Edit Password", class:"submitting" %>
         </div>
       </div>
      <% end %>
      <h3>Change your password</h3>
      <p>You can change your password here. It is recommended to change your password every 3 months.</p>
      <p>Caution: Do not share your password with anyone or write it in the chatrooms, group or private chats</p>
    </div>
  </div>
  <div class="white-glassy">
  </div>
</div>
